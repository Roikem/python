*{
    box-sizing: border-box;
}
#close a {
    text-decoration: none;
    color: #ee5255;
    display: block;
    font-size: 20px;
}

#learn a {
    text-decoration: none;
    color: #eee;
    display: block;
    font-size: 20px
}

.button {
    width: 200px;
    height: 50px;
    border-radius: 20px;
    text-align: center;
    line-height: 50px;
}

.callout_button {
    background: #FF5B5B;
    margin: 0 auto;
}

.callout_button:hover {
    background: red;
}

.close_button {
    background: #363636;
}

.close_button:hover {
    background: black;
}

.mask {
    width: 100%;
    height: 100%;
    background: #000;
    position: absolute;
    top: 0px;
    left: 0px;
    opacity: 0.4;
    z-index: 8000;
    display: none;
    -moz-user-select: none;
    -webkit-user-select: none;
}

.dialog {
    width: 900px;
    background: #fff;
    position: absolute;
    z-index: 9000;
    padding-bottom: 10px;
    display: none;
    -moz-user-select: none;
    -webkit-user-select: none;
    opacity: 0.7;
    border-radius: 5px;
}

.dialog_head {
    width: 100%;
    height: 50px;
    background: #4B4B4B;
    text-align: center;
    line-height: 50px;
    color: #eee;
    cursor: move;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.dialog_content {
    width: 100%;
    height: 580px;
}

